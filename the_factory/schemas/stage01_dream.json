{
  "type": "object",
  "properties": {
    "exploration_config": {
      "type": "object",
      "properties": {
        "seed_phrase": {"type": "string"},
        "vectors": {
          "type": "array",
          "items": {"type": "string"}
        },
        "research_timestamp": {"type": "string"},
        "non_repetition_check": {"type": "string"}
      },
      "required": ["seed_phrase", "vectors", "research_timestamp", "non_repetition_check"]
    },
    "market_research": {
      "type": "object",
      "properties": {
        "trends": {
          "type": "array",
          "items": {
            "type": "object", 
            "properties": {
              "name": {"type": "string"},
              "description": {"type": "string"},
              "evidence": {"type": "string"},
              "opportunity_level": {"enum": ["High", "Medium", "Low"]}
            },
            "required": ["name", "description", "evidence", "opportunity_level"]
          }
        },
        "competition_analysis": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "category": {"type": "string"},
              "oversaturated": {
                "type": "array",
                "items": {"type": "string"}
              },
              "gaps": {
                "type": "array", 
                "items": {"type": "string"}
              }
            },
            "required": ["category", "oversaturated", "gaps"]
          }
        }
      },
      "required": ["trends", "competition_analysis"]
    },
    "generated_ideas": {
      "type": "array",
      "minItems": 1,
      "maxItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "idea_id": {"type": "string"},
          "idea_name": {"type": "string"},
          "idea_slug": {"type": "string"},
          "rank": {"type": "number", "enum": [1]},
          "score": {"type": "number", "minimum": 1, "maximum": 10},
          "market": {"type": "string"},
          "target_user": {"type": "string"},
          "core_loop": {"type": "string"},
          "evidence_summary": {"type": "string"},
          "subscription_rationale": {"type": "string"},
          "mvp_complexity": {"enum": ["S", "M", "L"]},
          "problem_statement": {"type": "string"},
          "solution_approach": {"type": "string"},
          "differentiation": {"type": "string"},
          "current_workarounds": {"type": "string"},
          "behavior_change_risk": {"type": "string"},
          "signal_strength": {"enum": ["High", "Medium", "Low"]}
        },
        "required": [
          "idea_id", "idea_name", "idea_slug", "rank", "score", "market",
          "target_user", "core_loop", "evidence_summary", "subscription_rationale", 
          "mvp_complexity", "problem_statement", "solution_approach", "differentiation",
          "current_workarounds", "behavior_change_risk", "signal_strength"
        ]
      }
    },
    "validation_summary": {
      "type": "object",
      "properties": {
        "total_ideas": {"type": "number", "enum": [1]},
        "unique_ids": {"type": "number", "enum": [1]},
        "standards_compliance": {"type": "string"},
        "evidence_quality": {"type": "string"},
        "domain_diversification": {"type": "string"},
        "complexity_distribution": {"type": "string"},
        "subscription_viability": {"type": "string"}
      },
      "required": ["total_ideas", "unique_ids", "standards_compliance", "evidence_quality", "domain_diversification", "complexity_distribution", "subscription_viability"]
    },
    "scoring_methodology": {
      "type": "object",
      "properties": {
        "signal_strength_weight": {"type": "number"},
        "competition_gap_weight": {"type": "number"},
        "subscription_fit_weight": {"type": "number"},
        "mvp_feasibility_weight": {"type": "number"},
        "explanation": {"type": "string"}
      },
      "required": ["signal_strength_weight", "competition_gap_weight", "subscription_fit_weight", "mvp_feasibility_weight", "explanation"]
    }
  },
  "required": ["exploration_config", "market_research", "generated_ideas", "validation_summary", "scoring_methodology"]
}
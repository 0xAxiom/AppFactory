{
  "expo": {
    "name": "EVP Analyzer",
    "slug": "evp-analyzer",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "evpanalyzer",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0D0D0F"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.evpanalyzer.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "EVP Analyzer needs microphone access to record audio for paranormal investigation",
        "NSLocationWhenInUseUsageDescription": "EVP Analyzer can tag your investigation location for your records",
        "UIBackgroundModes": [
          "audio"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon-foreground.png",
        "backgroundColor": "#0D0D0F"
      },
      "package": "com.evpanalyzer.app",
      "permissions": [
        "RECORD_AUDIO",
        "ACCESS_FINE_LOCATION"
      ]
    },
    "plugins": [
      "expo-router",
      [
        "expo-av",
        {
          "microphonePermission": "EVP Analyzer needs microphone access to record audio for paranormal investigation"
        }
      ],
      "expo-asset"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}

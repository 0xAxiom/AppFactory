{
  "framework": "expo-router",
  "version": "^4.0.0",
  "structure": "tabs_with_stack",
  "tabs": [
    {
      "name": "index",
      "label": "Investigate",
      "icon": "mic",
      "path": "/(tabs)/index"
    },
    {
      "name": "log",
      "label": "Log",
      "icon": "list",
      "path": "/(tabs)/log"
    },
    {
      "name": "settings",
      "label": "Settings",
      "icon": "settings",
      "path": "/(tabs)/settings"
    }
  ],
  "stack_routes": [
    {
      "path": "/session/[id]",
      "component": "SessionScreen",
      "params": ["id"]
    },
    {
      "path": "/session/[id]/spectrogram",
      "component": "SpectrogramScreen",
      "params": ["id"],
      "premium_only": true
    }
  ],
  "modal_routes": [
    {
      "path": "/record",
      "component": "RecordScreen",
      "presentation": "fullScreenModal"
    },
    {
      "path": "/session/[id]/tag",
      "component": "TagScreen",
      "presentation": "modal"
    },
    {
      "path": "/session/[id]/export",
      "component": "ExportScreen",
      "presentation": "modal",
      "premium_only": true
    },
    {
      "path": "/onboarding",
      "component": "OnboardingScreen",
      "presentation": "fullScreenModal"
    },
    {
      "path": "/paywall",
      "component": "PaywallScreen",
      "presentation": "formSheet"
    }
  ],
  "file_structure": {
    "app": {
      "_layout.tsx": "Root layout with providers (RevenueCat, Theme)",
      "(tabs)": {
        "_layout.tsx": "Tab navigator configuration",
        "index.tsx": "Home/Investigation dashboard",
        "log.tsx": "Investigation log list",
        "settings.tsx": "Settings screen"
      },
      "record.tsx": "Recording modal",
      "session": {
        "[id]": {
          "index.tsx": "Session detail/analyzer",
          "spectrogram.tsx": "Full spectrogram view",
          "tag.tsx": "Tag editor modal",
          "export.tsx": "Export options modal"
        }
      },
      "onboarding.tsx": "Onboarding flow",
      "paywall.tsx": "Subscription paywall"
    }
  }
}

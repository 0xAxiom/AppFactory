# App Factory Preview Environment Variables
# Copy this file to .env and configure as needed

# Preview Server Configuration
PREVIEW_PORT=3456
PREVIEW_HOST=localhost

# Build Discovery
BUILDS_DIRECTORY=builds
MAX_BUILD_SCAN_DEPTH=3

# Expo Development
EXPO_USE_METRO_WORKSPACE_ROOT=true
EXPO_NO_TELEMETRY=false
EXPO_OFFLINE=false

# For builds that require environment variables:
# Add EXPO_PUBLIC_ prefixed variables here that will be passed to builds

# Example API configuration (for builds that need it)
# EXPO_PUBLIC_API_URL=https://api.example.com
# EXPO_PUBLIC_APP_VERSION=1.0.0

# RevenueCat configuration (for builds that use subscriptions)
# EXPO_PUBLIC_REVENUECAT_API_KEY=your_revenuecat_public_key_here

# Note: Never commit real API keys or secrets to version control
# Use .env.local for local development with real values
{
  "expo": {
    "name": "NeuroDash",
    "slug": "neurodash",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.appfactory.neurodash",
      "buildNumber": "1",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "NeuroDash uses your microphone for voice task entry and energy check-ins to reduce cognitive load.",
        "NSSpeechRecognitionUsageDescription": "NeuroDash uses speech recognition to help you interact with the app hands-free when energy is low."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a2e"
      },
      "package": "com.appfactory.neurodash",
      "versionCode": 1,
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-speech",
      [
        "expo-av",
        {
          "microphonePermission": "Allow NeuroDash to record audio for voice interactions."
        }
      ],
      [
        "expo-linear-gradient"
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "neurodash-app-factory"
      }
    },
    "sdkVersion": "54.0.0"
  }
}
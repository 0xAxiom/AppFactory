{
  "name": "codebase-explainer",
  "version": "1.0.0",
  "description": "AI agent that explores and explains unfamiliar codebases through natural language interaction",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "typecheck": "tsc --noEmit",
    "validate": "node ../../scripts/validate.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "openai": "^4.28.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "@types/node": "^20.11.0"
  },
  "keywords": [
    "ai",
    "agent",
    "codebase",
    "explainer",
    "rig-aligned"
  ],
  "license": "MIT"
}

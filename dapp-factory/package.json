{
  "name": "dapp-factory",
  "version": "8.0.0",
  "description": "Local tooling for dApp generation and build validation",
  "type": "module",
  "scripts": {
    "generate": "tsx generator/index.ts",
    "validate": "tsx validator/index.ts",
    "zip": "tsx validator/zip.ts",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "solana",
    "web3",
    "dapp",
    "prompt-generator"
  ],
  "author": "App Factory",
  "license": "MIT",
  "dependencies": {
    "archiver": "^6.0.0",
    "handlebars": "^4.7.8",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.0",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "tsx": "^4.0.0",
    "typescript": "^5.2.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

{
  "allOf": [
    {
      "$ref": "_shared/meta.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "product_specification": {
          "type": "object",
          "properties": {
            "overview": {
              "type": "object",
              "properties": {
                "problem_statement": {"type": "string"},
                "solution_approach": {"type": "string"},
                "value_proposition": {"type": "string"},
                "target_audience": {"type": "string"}
              },
              "required": ["problem_statement", "solution_approach", "value_proposition", "target_audience"]
            },
            "core_features": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "feature_name": {"type": "string"},
                  "description": {"type": "string"},
                  "user_story": {"type": "string"},
                  "priority": {"$ref": "schemas/_shared/common.schema.json#/definitions/priority_level"},
                  "mvp_inclusion": {"type": "boolean"},
                  "technical_complexity": {"$ref": "schemas/_shared/common.schema.json#/definitions/mvp_complexity"}
                },
                "required": ["feature_name", "description", "user_story", "priority", "mvp_inclusion", "technical_complexity"]
              },
              "minItems": 3
            },
            "user_personas": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "persona_name": {"type": "string"},
                  "demographics": {"type": "string"},
                  "pain_points": {"type": "array", "items": {"type": "string"}},
                  "goals": {"type": "array", "items": {"type": "string"}},
                  "usage_patterns": {"type": "string"}
                },
                "required": ["persona_name", "demographics", "pain_points", "goals", "usage_patterns"]
              },
              "minItems": 2
            }
          },
          "required": ["overview", "core_features", "user_personas"]
        },
        "standards_compliance": {
          "$ref": "schemas/_shared/common.schema.json#/definitions/standards_compliance"
        }
      },
      "required": ["product_specification", "standards_compliance"]
    }
  ]
}